<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="quiz.QuizController" prefWidth="800" prefHeight="500">
    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="header-bar">
            <Label fx:id="scoreLabel" text="Score: 0"/>
            <Label fx:id="timerLabel" text="Time Left: 60s"/>
            <Button fx:id="loadBtn" text="Load Quiz" onAction="#loadCSV"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label fx:id="questionLabel" text="Load a quiz to begin!" wrapText="true" styleClass="question-text"/>
            <VBox spacing="10">
                <Button fx:id="optionA" text="Option A" onAction="#handleOption" styleClass="option-btn"/>
                <Button fx:id="optionB" text="Option B" onAction="#handleOption" styleClass="option-btn"/>
                <Button fx:id="optionC" text="Option C" onAction="#handleOption" styleClass="option-btn"/>
                <Button fx:id="optionD" text="Option D" onAction="#handleOption" styleClass="option-btn"/>
            </VBox>
            <Button fx:id="nextBtn" text="Next Question" onAction="#nextQuestion"/>
        </VBox>
    </center>
</BorderPane>
