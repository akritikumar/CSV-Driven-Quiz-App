<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="quiz.QuizController"
            prefWidth="800" prefHeight="500">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER" spacing="20" styleClass="header-bar">
            <Label fx:id="scoreLabel" text="Score: 0"/>
            <Label fx:id="timerLabel" text="Time Left: 60s"/>
            <Button fx:id="loadBtn" text="Load Quiz" onAction="#loadCSV"/>
            <Button fx:id="startBtn" text="Start Quiz" onAction="#startQuiz"/>
        </HBox>
    </top>

    <!-- Centered Quiz Area -->
    <center>
        <StackPane alignment="CENTER">
            <VBox alignment="CENTER" spacing="25">
                <Label fx:id="questionLabel"
                       text="Load a quiz to begin!"
                       wrapText="true"
                       styleClass="question-text"
                       maxWidth="600"
                       textAlignment="CENTER"/>

                <!-- Centered Options -->
                <VBox alignment="CENTER" spacing="12">
                    <Button fx:id="optionA" text="Option A" onAction="#handleOption" styleClass="option-btn" maxWidth="300"/>
                    <Button fx:id="optionB" text="Option B" onAction="#handleOption" styleClass="option-btn" maxWidth="300"/>
                    <Button fx:id="optionC" text="Option C" onAction="#handleOption" styleClass="option-btn" maxWidth="300"/>
                    <Button fx:id="optionD" text="Option D" onAction="#handleOption" styleClass="option-btn" maxWidth="300"/>
                </VBox>

                <Button fx:id="nextBtn" text="Next Question" onAction="#nextQuestion"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
